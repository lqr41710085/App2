<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#2196F3"
        android:text="@string/reset"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/team1"
        android:layout_width="120dp"
        android:layout_height="43dp"
        android:layout_marginTop="16dp"
        android:background="#FCFAFA"
        android:gravity="center_horizontal"
        android:text="@string/team1"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/team2"
        android:layout_width="120dp"
        android:layout_height="43dp"
        android:layout_marginTop="16dp"
        android:background="#FCFAFA"
        android:gravity="center_horizontal"
        android:text="@string/team2"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/grades2"
        app:layout_constraintStart_toStartOf="@+id/grades2"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/grades"
        android:layout_width="139dp"
        android:layout_height="102dp"
        android:gravity="center_horizontal"
        android:text="@string/grade"

        android:textSize="70sp"
        app:layout_constraintEnd_toEndOf="@+id/team1"
        app:layout_constraintStart_toStartOf="@+id/team1"
        app:layout_constraintTop_toTopOf="@+id/grades2" />

    <TextView
        android:id="@+id/grades2"
        android:layout_width="139dp"
        android:layout_height="102dp"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        android:text="@string/grade2"
        android:textSize="70sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/team2" />

    <Button
        android:id="@+id/button4"
        android:layout_width="94dp"
        android:layout_height="54dp"
        android:backgroundTint="#2196F3"
        android:text="@string/button4"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@+id/button5"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/button5" />

    <Button
        android:id="@+id/button3"
        android:layout_width="94dp"
        android:layout_height="54dp"

        android:backgroundTint="#2196F3"
        android:text="@string/button3"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintStart_toEndOf="@+id/button2"
        app:layout_constraintTop_toTopOf="@+id/button4" />

    <Button
        android:id="@+id/button2"
        android:layout_width="94dp"
        android:layout_height="54dp"

        android:backgroundTint="#2196F3"
        android:text="@string/button2"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/grades"
        app:layout_constraintStart_toStartOf="@+id/grades"
        app:layout_constraintTop_toTopOf="@+id/button3" />

    <Button
        android:id="@+id/button1"
        android:layout_width="94dp"
        android:layout_height="54dp"
        android:layout_marginStart="4dp"
        android:backgroundTint="#2196F3"

        android:text="@string/button1"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@+id/button2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button2" />

    <Button
        android:id="@+id/button6"
        android:layout_width="94dp"
        android:layout_height="54dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#2196F3"
        android:text="@string/button6"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button5"
        app:layout_constraintTop_toBottomOf="@+id/grades2" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="2dp"
        android:layout_height="218dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.274"
        app:srcCompat="@android:color/darker_gray" />

    <Button
        android:id="@+id/button5"
        android:layout_width="94dp"
        android:layout_height="54dp"
        android:backgroundTint="#2196F3"
        android:text="@string/button5"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/grades2"
        app:layout_constraintStart_toStartOf="@+id/grades2"
        app:layout_constraintTop_toTopOf="@+id/button6" />


</androidx.constraintlayout.widget.ConstraintLayout>
